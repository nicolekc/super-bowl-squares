{
  "name": "superbowl-squares",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "bin": {
    "superbowl-squares": "./bin/squares.js"
  },
  "scripts": {
    "cli": "tsx src/cli/index.ts",
    "dev": "vite",
    "build:cli": "esbuild src/cli/index.ts --bundle --platform=node --format=esm --outfile=bin/squares.js --banner:js=\"#!/usr/bin/env node\" --external:readline",
    "build:web": "vite build",
    "build": "npm run build:cli && npm run build:web",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.2",
    "esbuild": "^0.19.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  }
}
